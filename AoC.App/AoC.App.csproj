<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<AssemblyName>Ujeby.$(MSBuildProjectName)</AssemblyName>
		<RootNamespace>Ujeby.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
		<!--<Nullable>enable</Nullable>-->
		<Configurations>Debug;Release;Debug.Sample;Release_2022;Release_2021;Release_2020;Debug_2022;Debug_2021;Debug_2020;Debug.Sample_2020;Debug.Sample_2021;Debug.Sample_2022</Configurations>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_RELEASE;_2020;_2021;_2022;</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug.Sample|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_DEBUG_SAMPLE</DefineConstants>
		<Optimize>False</Optimize>
	</PropertyGroup>
	

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug_2020|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_2020</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug_2021|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_2021</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug_2022|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_2022</DefineConstants>
	</PropertyGroup>


	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug.Sample_2020|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_DEBUG_SAMPLE;_2020</DefineConstants>
		<Optimize>False</Optimize>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug.Sample_2021|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_DEBUG_SAMPLE;_2021</DefineConstants>
		<Optimize>False</Optimize>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug.Sample_2022|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_DEBUG;_DEBUG_SAMPLE;_2022</DefineConstants>
		<Optimize>False</Optimize>
	</PropertyGroup>


	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_2020|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_RELEASE;_2020</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_2021|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_RELEASE;_2021</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_2022|AnyCPU'">
		<DefineConstants>$(DefineConstants)TRACE;_RELEASE;_2022</DefineConstants>
	</PropertyGroup>


	<ItemGroup>
		<PackageReference Include="Ujeby" Version="1.10.0" />
	</ItemGroup>

	<!--<ItemGroup>
		<Reference Include="Ujeby">
			<HintPath>..\..\Ujeby\publish-dll\Ujeby.dll</HintPath>
		</Reference>
	</ItemGroup>-->

	<ItemGroup>

		<Content Include="Year*\**\input*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<None Remove=".session" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Common\PuzzleTemplate.cs">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Compile>
	</ItemGroup>

</Project>
